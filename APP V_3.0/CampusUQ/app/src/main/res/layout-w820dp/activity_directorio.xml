<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="co.edu.uniquindio.android.electiva.campusuq.activity.activity.DirectorioActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/logoland"
        android:background="#088A29"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:entries="@array/Dependencias"
        android:gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:id="@+id/listView"
        android:layout_marginBottom="14dp"
        android:entries="@array/Contactos" />

   
    </ScrollView>

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/btnact"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp" />
</LinearLayout>
