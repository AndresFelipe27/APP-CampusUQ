<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.uniquindio.android.electiva.campusuq.activity.activity.SugerenciasActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/imageView"
        android:src="@drawable/logoland"
        android:background="#088A29"
        />

    <TextView
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:text="@string/sugerencia"
        android:textColor="#088A29"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="top|bottom"
        android:padding="30dp"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nombre"
                android:id="@+id/nombre"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="50dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/txtNombre"
                android:layout_gravity="center_horizontal"
                android:background="#D8D8D8"
                android:layout_marginBottom="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/asunto"
                android:id="@+id/asunto"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:textSize="50dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/txtAsunto"
                android:layout_gravity="center_horizontal"
                android:background="#D8D8D8"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sugerencia"
            android:id="@+id/sugerencia"
            android:layout_marginRight="15dp"
            android:textSize="50dp"
            android:layout_marginLeft="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/txtSugerencia"
            android:background="#D8D8D8"
            android:layout_weight="1.91" />
    </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/enviar"
        android:id="@+id/btn_enviar"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"/>


</LinearLayout>
